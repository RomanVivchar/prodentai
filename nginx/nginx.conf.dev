events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;
    
    sendfile on;
    keepalive_timeout 65;
    client_max_body_size 20M;
    
    # Upstream for backend
    upstream backend {
        server backend:8000;
    }
    
    # HTTP server (SSL termination на балансировщике)
    # Балансировщик делает SSL termination и передает запросы по HTTP
    # с заголовком X-Forwarded-Proto: https
    server {
        listen 80;
        server_name prodentai.tech www.prodentai.tech localhost;
        
        # Backend API
        location /api/ {
            # Обработка CORS preflight запросов (OPTIONS)
            if ($request_method = 'OPTIONS') {
                add_header 'Access-Control-Allow-Origin' '*' always;
                add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS, PATCH' always;
                add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, X-Requested-With' always;
                add_header 'Access-Control-Allow-Credentials' 'true' always;
                add_header 'Access-Control-Max-Age' 1728000;
                add_header 'Content-Type' 'text/plain; charset=utf-8';
                add_header 'Content-Length' 0;
                return 204;
            }
            
            proxy_pass http://backend;
            
            # Базовые заголовки
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            
            # X-Forwarded-For: объединяем, если балансировщик уже передал
            set $forwarded_for $remote_addr;
            if ($http_x_forwarded_for) {
                set $forwarded_for "$http_x_forwarded_for, $remote_addr";
            }
            proxy_set_header X-Forwarded-For $forwarded_for;
            
            # X-Forwarded-Proto: используем от балансировщика или ставим https
            set $forwarded_proto $http_x_forwarded_proto;
            if ($forwarded_proto = '') {
                set $forwarded_proto https;
            }
            proxy_set_header X-Forwarded-Proto $forwarded_proto;
            
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Port 443;
            
            # HTTP/1.1 для keep-alive
            proxy_http_version 1.1;
            proxy_set_header Connection "";
            
            # Таймауты
            proxy_read_timeout 300s;
            proxy_send_timeout 300s;
            proxy_connect_timeout 300s;
            
            # Буферизация (отключена для отладки, можно включить позже)
            proxy_buffering off;
            
            # Обработка ошибок
            proxy_next_upstream error timeout invalid_header http_500 http_502 http_503;
        }
        
        # Frontend static files
        location / {
            root /usr/share/nginx/html;
            try_files $uri $uri/ /index.html;
            expires 1h;
            add_header Cache-Control "public, immutable";
        }
        
        # Static assets caching
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            root /usr/share/nginx/html;
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
        
        # Handle missing favicon files gracefully
        location = /favicon.ico {
            root /usr/share/nginx/html;
            try_files $uri =204;
            access_log off;
            log_not_found off;
        }
        
        location = /favicon.svg {
            root /usr/share/nginx/html;
            try_files $uri =204;
            access_log off;
            log_not_found off;
        }
        
        location = /logo192.png {
            root /usr/share/nginx/html;
            try_files $uri =204;
            access_log off;
            log_not_found off;
        }
        
        # Block common scanner paths
        location ~ /\.(git|env|htaccess|htpasswd) {
            deny all;
            access_log off;
            log_not_found off;
        }
        
        # Security: block access to hidden files
        location ~ /\. {
            deny all;
            access_log off;
            log_not_found off;
        }
    }
}

